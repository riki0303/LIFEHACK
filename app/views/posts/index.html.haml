= render 'commons/header', title: 'LIFEHACK'

.container
  = render 'commons/aside'
  = render 'search-form', title: '投稿検索', q:@q, posts:@posts

  .post
    - @posts.each do |post|
      .post__item
        = render 'commons/post', post: post
    - if @posts.empty?
      %p 投稿がありません


= paginate @posts

