.container
  .profile
    = display_profile_avatar(profile, 'profile__avatar')
    %p.profile__name
      = profile&.name
    %p.profile__bio
      = profile&.bio

  - if @user == current_user
    .profile__btn
      = link_to '編集する', edit_profile_path , class: 'profile__link profile__link--unfollow'
  - else
    .profile__btn.profile__btn--follow
      - if current_user&.has_followed?(user)
        = link_to 'フォロー解除', account_unfollows_path(user), method: :post ,data: { confirm: 'フォロー解除して宜しいですか？' }, class: 'profile__link profile__link--unfollow'
      - else
        = link_to 'フォロー', account_follows_path(user), method: :post , class: 'profile__link profile__link--follow'

  .profile__parameter-container
    .profile__parameter
      .profile__parameter-number
        %p 44
      %p.profile__parameter-name 投稿
    .profile__parameter
      .profile__parameter-number
        %p 110
        %p.profile__parameter-name フォロワー
    .profile__parameter
      .profile__parameter-number
        %p 44
      %p.profile__parameter-name フォロー中

  .profile__post-container
    - posts.each do |post|
      = link_to post_path(post) do
        = image_tag post.image, class: 'profile__post'